{
  "name": "@forthright/vile",
  "version": "0.10.0",
  "description": "A punishing, yet easy to use tool for writing insightful code.",
  "main": "lib/index.js",
  "files": [
    "bin/vile",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">= 0.12",
    "npm": ">= 2.0.0"
  },
  "bin": {
    "vile": "bin/vile"
  },
  "scripts": {
    "babel": "babel",
    "coffee": "coffee",
    "compile": "node bin/compile",
    "compile-dev": "node bin/compile-dev",
    "dev": "sh bin/dev",
    "dev-setup": "sh bin/dev-setup",
    "istanbul": "istanbul",
    "lint-cov": "node bin/lint-cov",
    "mocha": "mocha",
    "ncu": "ncu -a",
    "nyc": "nyc",
    "release-it": "release-it",
    "test": "node bin/test-all",
    "test-non-system": "_mocha --recursive -u bdd -R spec -t 2000 .test/unit .test/integration",
    "test-non-system-cov": "nyc -r json -x .test -x **/node_modules/** --report-dir coverage/non-system npm run test-non-system",
    "test-system": "_mocha --recursive -u bdd -R spec -s 10000 -t 40000 .test/system",
    "test-system-cov": "cross-env TEST_COV=1 npm run test-system",
    "test-cov": "node bin/test-cov",
    "test-ci-build": "node bin/test-ci-build",
    "tsc": "tsc",
    "vile": "vile p -usi -x src.ts:lib.js,test.coffee:.test.js -n"
  },
