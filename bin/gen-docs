#!/usr/bin/env node
require("shelljs/global")

var path = require("path")
var pkg = require("./../package")

var build_dir = path.join(__dirname, "..", ".docs")
var deploy_dir = path.join(__dirname, "..", "..", "vile-docs", "public")

console.log("compiling to: " + build_dir)

var generate = "npm run -s -- typedoc " +
  "--mode modules " +
  "--readme doc/index.md " +
  "--theme doc/theme " +
  "--out " + build_dir + " " +
  "--name 'v" + pkg.version + "' " +
  "--tsconfig tsconfig.json " +
  "--includeDeclarations " +
  "--externalPattern '**/@types/*/*.d.ts'"

var copy_over = "cp -rf " + build_dir + "/* " + deploy_dir + "/."

exec(
  generate,
  function(code, stdout, stderr) {
    if (code !== 0) exit(code)

    exec(
      copy_over,
      function(code, stdout, stderr) {
        if (code !== 0) exit(code)
        console.log("Copied to: " + deploy_dir)
        console.log("Please manually commit a release on that branch.")
      })
  })
